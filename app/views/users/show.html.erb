<h1><%= @user.email %></h1>

<h2>Created Events</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li>
      <%= link_to event.title, event_path(event) %> - <%= event.date %>
    </li>
  <% end %>
</ul>

<h2>Upcoming Events</h2>
<ul>
  <% @upcoming_attended_events.each do |event| %>
    <li>
      <%= link_to event.title, event_path(event) %> - <%= event.date %>
    </li>
  <% end %>
</ul>

<h2>Past Events</h2>
<ul>
  <% @past_attended_events.each do |event| %>
    <li>
      <%= link_to event.title, event_path(event) %> - <%= event.date %>
    </li>
  <% end %>
</ul>

